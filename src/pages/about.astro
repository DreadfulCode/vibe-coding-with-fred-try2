import Layout from '../layouts/Layout.astro';
---

<Layout title="About">
  <div class="bg-gradient-to-b from-primary-50 to-white py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">About Fred</h1>
        <p class="text-lg text-gray-600">
          Developer, writer, and creator of Vibe Coding
        </p>
      </div>
    </div>
  </div>
  
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8 mb-12">
        <div class="w-48 h-48 rounded-full overflow-hidden flex-shrink-0">
          <img 
            src="https://images.pexels.com/photos/1681010/pexels-photo-1681010.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
            alt="Fred" 
            class="w-full h-full object-cover"
          />
